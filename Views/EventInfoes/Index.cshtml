@model IEnumerable<Eventchain.Models.EventInfo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recurring)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recurring)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parent.EventId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EventInfoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EventInfoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EventInfoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
